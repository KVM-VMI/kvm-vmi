Vagrant.configure(2) do |config|
    config.vm.box = "debian/jessie64"

    # enable NFS here
    use_nfs = true
    # generate Debian packages
    gen_deb = false
    # install Nitro components from pre built packages
    packaged = true

    config.vm.synced_folder ".", "/vagrant", disabled: true

    if use_nfs == true
        config.vm.synced_folder "..", "/vagrant",
            :nfs => true,
            :nfs_version => 4,
            :nfs_udp => false
    end

    config.vm.provider :libvirt do |libvirt|
        libvirt.cpus = 2
        libvirt.memory = 3000
        libvirt.nic_model_type = "virtio"
        libvirt.driver = "kvm"
        libvirt.nested = true
        if use_nfs == false
            libvirt.machine_virtual_size = 40
        end
    end

    config.vm.provision "ansible" do |ansible|
        # debug
        # ansible.verbose =  '-vvv'
        # ansible.start_at_task =  ''
        # set root_dir
        if use_nfs == true
            root_dir = '/vagrant'
        else
            root_dir = '/data/kvm-vmi'
        end
        # choose playbook
        if gen_deb
            ansible.playbook = "generate_deb/playbook.yml"
        elsif packaged
            ansible.playbook = "provision_packaged/playbook.yml"
        else
            ansible.playbook = "provision_full/playbook.yml"
        end
        ansible.extra_vars = {
            'root_dir': root_dir,
            'nfs': use_nfs
        }
    end
end
